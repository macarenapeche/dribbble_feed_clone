<div class="section">
	<div class="container">
		<h1 class="title is-3"><%= @shot.title %></h1>
		<div class="columns">
			<div class="column is-8">
				<span class="by has-text-grey-light">by</span>

				<div class="user-name has-text-weight-bold"><%= @shot.user.name %></div>
				<div class="shot-time"><span class="has-text-grey-light">posted</span><span class="has-text-weight-semibold">
					<%= time_ago_in_words(@shot.created_at) %>
				</span></div>
			</div>	
		</div>

		<div class="columns">
			<div class="column is-8">
				<div class="shot-container">
					<div class="shot-full">
						 <%= image_tag @shot.shot_image.variant(resize: "800x600") if @shot.shot_image.attached? %>
					</div>

					<% if user_signed_in? && (current_user.id == @shot.user_id) %>		
						<div class="buttons has-addons">
							<%= link_to 'Edit', edit_shot_path(@shot), class: "button" %>
							<%= button_to 'Delete', shot_path, method: :delete, data: { turbo: true, turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this shot?'}, class: "button" %>
						</div>
					<% end %>

					<div class="content">
						<%= @shot.description %>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
